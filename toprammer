from bitfile import *
import sys
import getopt


class TOPException(Exception): pass

class TOP:
	def __init__(self, bitfileName):
		self.bitfile = Bitfile()
		self.bitfile.parseFile(bitfileName)

def usage():
	print "TOP2049 Open Source programming suite"
	print ""
	print "Usage: %s [OPTIONS]" % sys.argv[0]
	print ""
	print " -b|--bitfile           Path to the *.bit file (mandatory)"

def main(argv):
	opt_bitfile = None
	try:
		(opts, args) = getopt.getopt(sys.argv[1:],
			"hb:",
			[ "help", "bitfile=", ])
	except getopt.GetoptError:
		usage()
		return 1
	for (o, v) in opts:
		if o in ("-h", "--help"):
			usage()
			return 0
		if o in ("-b", "--bitfile"):
			opt_bitfile = v
	if not opt_bitfile:
		print "-b|--bitfile is mandatory!"
		return 1

	try:
		top = TOP(opt_bitfile)
	except (TOPException, BitfileException), e:
		print e
		return 1
	return 0

if __name__ == "__main__":
	sys.exit(main(sys.argv))
