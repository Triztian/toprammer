from libtoprammer.toprammer_main import *
from PyQt4.QtCore import *
from PyQt4.QtGui import *


class MainWidget(QWidget):
	def __init__(self, mainwnd):
		QWidget.__init__(self, mainwnd)
		self.mainwnd = mainwnd

		self.bitpath = bitfileFind("unitest.bit")
		if not self.bitpath:
			QMessageBox.critical(self, self.tr("Bitfile not found"),
				self.tr("Could not find the Bitfile unitest.bit"))
			raise TOPException()
		try:
			self.top = TOP(bitfileName=self.bitpath, verbose=2)
		except (TOPException), e:
			QMessageBox.critical(self, self.tr("TOP init failed"),
				self.tr("Initialization of TOP device failed:\n") +\
				str(e))
			raise

class MainWindow(QMainWindow):
	def __init__(self, parent=None):
		QMainWindow.__init__(self, parent)

		self.setWindowTitle(self.tr("Toprammer - Universal tester"))
		self.setCentralWidget(MainWidget(self))

def main(argv):
	try:
		app = QApplication(argv)
		mainwnd = MainWindow()
		mainwnd.show()
		return app.exec_()
	except (TOPException), e:
		print e
		return 1

if __name__ == "__main__":
	sys.exit(main(sys.argv))
